<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/beijingse">

    <View
        android:layout_width="6dp"
        android:layout_height="match_parent"
        android:background="@color/qianlanse" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/umeng_fb_item_height">

        <TextView
            android:id="@+id/umeng_fb_welcome_info"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical"
            android:textColor="#FFFFFF"
            android:text="欢迎使用洛英百科，在这里你可以反馈使用感受和建议，收到之后我会第一时间回复的"
            android:textSize="@dimen/umeng_fb_item_content_size" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/umeng_fb_item_line_height"
            android:layout_alignParentBottom="true"
            android:background="@color/huise" />

    </RelativeLayout>

</LinearLayout>
