<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@color/beijingse" >

 <com.youku.player.base.YoukuPlayerView
        android:id="@+id/ykplayer"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >
    </com.youku.player.base.YoukuPlayerView>

 <LinearLayout android:layout_width="fill_parent"
     android:layout_height="40dp"
     android:orientation="horizontal">
     
      <ImageView 
         android:id="@+id/video_player_view_write"
         android:layout_width="0dp"
         android:layout_weight="1"
         android:layout_height="fill_parent"
         android:src="@drawable/video_write"/>
     <ImageView 
         android:id="@+id/video_player_view_down"
         android:layout_width="0dp"
         android:layout_weight="1"
         android:layout_height="fill_parent"
         android:src="@drawable/video_down"/>
      <ImageView 
         android:id="@+id/video_player_view_share"
         android:layout_width="0dp"
         android:layout_weight="1"
         android:layout_height="fill_parent"
         android:src="@drawable/video_share"/>
       <ImageView 
         android:id="@+id/video_player_view_open"
         android:layout_width="0dp"
         android:layout_weight="1"
         android:layout_height="fill_parent"
         android:src="@drawable/video_open"/>
 </LinearLayout>
 <View android:layout_width="fill_parent"
     android:layout_height="1sp"
     android:layout_marginTop="5dp"
     android:background="@color/huise"/>
 
 <TextView 
     android:layout_margin="5dp"
     android:id="@+id/video_info"
     android:text="正在获取视频信息中..."
     style="@style/text_small_title"
     />
  <View android:layout_width="fill_parent"
     android:layout_height="1sp"
     android:background="@color/huise"/>
 <ListView 
     android:id="@+id/video_comments"
     android:layout_width="fill_parent"
        android:divider="@color/baise"
        android:dividerHeight="1px" 
     android:layout_height="0dp"
     android:padding="5dp"
     android:layout_weight="1"/>
 
</LinearLayout>