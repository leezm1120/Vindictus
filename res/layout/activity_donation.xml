<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/beijingse"
    android:orientation="vertical"
    tools:context=".DonationActivity" >

    <View
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:background="@color/shenlanse" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <View
                android:layout_width="fill_parent"
                android:layout_height="10dp" />

            <TextView
                android:id="@+id/donation_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="#FFFFFF" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="10dp" />

            <TextView
                android:id="@+id/donation_zfb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="#FF00FF"
                android:textSize="16sp" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="点击图片保存二维码到相册"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="10dp" />

            <ImageView
                android:id="@+id/img_zfb"
                android:layout_width="fill_parent"
                android:layout_height="200dp"
                android:src="@raw/zfb" />
<View
                android:layout_width="fill_parent"
                android:layout_height="10dp" />
            <ImageView
                android:id="@+id/img_wx"
                android:layout_width="fill_parent"
                android:layout_height="200dp"
                android:src="@raw/wx" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="10dp" />
            <ImageView
                android:id="@+id/img_qq" 
                android:layout_width="fill_parent"
                android:layout_height="200dp"
                android:src="@raw/qq" />
            
            <View
                android:layout_width="fill_parent"
                android:layout_height="10dp" />

            <TextView
                android:id="@+id/donation_patron"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColor="#FFFFFF" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>