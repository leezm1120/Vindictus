<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/beijingse"
    android:orientation="vertical"
    android:padding="10dp" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="20dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/found_title_nature_title"
            style="@style/text_big_title"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_centerVertical="true"
            android:text="1" />

        <TextView
            android:id="@+id/found_title_nature_remarks"
            style="@style/text_small_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/found_title_nature_title"
            android:text="#FF0000" />

        <TextView
            android:id="@+id/found_title_nature_done"
            style="@style/text_big_title"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="âˆš"
            android:textColor="@color/hongse" />
        
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="20dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/found_title_nature_type"
            style="@style/text_small_title"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="ACBC" />

        <TextView
            android:id="@+id/found_title_nature_area"
            style="@style/text_small_title"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:gravity="right|center_vertical"
            android:text="1" />

        <TextView
            android:id="@+id/found_title_nature_carbonf"
            style="@style/text_small_title"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:gravity="right|center_vertical"
            android:text="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="20dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/found_title_nature_channel"
            style="@style/text_second_title"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="3asdasdasd" />

        <TextView
            android:id="@+id/found_title_nature_liliang"
            style="@style/text_small_tips"
            android:textSize="11sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/text_view_biaoqian_liliang" />

        <TextView
            android:id="@+id/found_title_nature_zhili"
            style="@style/text_small_tips"
            android:textSize="11sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/text_view_biaoqian_zhili" />

        <TextView
            android:id="@+id/found_title_nature_minjie"
            style="@style/text_small_tips"
            android:textSize="11sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/text_view_biaoqian_minjie" />

        <TextView
            android:id="@+id/found_title_nature_yizhi"
            style="@style/text_small_tips"
            android:textSize="11sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/text_view_biaoqian_yizhi" />
    </LinearLayout>

</LinearLayout>