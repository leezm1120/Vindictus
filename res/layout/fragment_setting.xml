<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/beijingse"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:background="@color/shenlanse" >

        <com.leezm.vindictus.utils.MarqueeTextView
            android:id="@+id/me_text_notice"
            style="@style/text_spinner_item"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:singleLine="true" />
    </RelativeLayout>
<ScrollView android:layout_width="fill_parent"
    android:layout_height="0dp"
    android:layout_weight="1">
        <LinearLayout android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">
    <View
        android:id="@+id/me_tuijian_view"
        android:layout_width="fill_parent"
        android:layout_height="20dp" />

    <RelativeLayout
        android:id="@+id/me_tuijian"
        style="@style/img_setting_bg" >

        <ImageView
            android:id="@+id/imageView1"
            style="@style/img_setting_icon"
            android:background="@drawable/icon_jingpin" />

        <TextView
            style="@style/text_setting"
            android:layout_toRightOf="@+id/imageView1"
            android:text="精品推荐"
            android:textSize="16sp" />
    </RelativeLayout>
    
    <View
        android:layout_width="fill_parent"
        android:layout_height="20dp" />

    <RelativeLayout
        android:id="@+id/me_share"
        style="@style/img_setting_bg" >

        <ImageView
            android:id="@+id/imageView1"
            style="@style/img_setting_icon"
            android:background="@drawable/icon_share" />

        <TextView
            style="@style/text_setting"
            android:layout_toRightOf="@+id/imageView1"
            android:text="分享好友"
            android:textSize="16sp" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="20dp"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/me_fb"
        style="@style/img_setting_bg"
        android:visibility="gone" >

        <ImageView
            android:id="@+id/imageView1"
            style="@style/img_setting_icon"
            android:background="@drawable/icon_yijian" />

        <TextView
            style="@style/text_setting"
            android:layout_toRightOf="@+id/imageView1"
            android:text="意见反馈"
            android:textSize="16sp" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="20dp" />

    <RelativeLayout
        android:id="@+id/me_aboutus"
        style="@style/img_setting_bg" >

        <ImageView
            android:id="@+id/imageView1"
            style="@style/img_setting_icon"
            android:background="@drawable/icon_about" />

        <TextView
            style="@style/text_setting"
            android:layout_toRightOf="@+id/imageView1"
            android:text="关于我们"
            android:textSize="16sp" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="20dp" />

    <RelativeLayout
        android:id="@+id/me_update"
        style="@style/img_setting_bg" >

        <ImageView
            android:id="@+id/imageView1"
            style="@style/img_setting_icon"
            android:background="@drawable/icon_update" />

        <TextView
            style="@style/text_setting"
            android:layout_toRightOf="@+id/imageView1"
            android:text="检查更新"
            android:textSize="16sp" />
    </RelativeLayout>


<!-- 
    <View
        android:layout_width="fill_parent"
        android:layout_height="20dp" />
    <RelativeLayout
        android:id="@+id/me_setting"
        style="@style/img_setting_bg" >

        <ImageView
            android:id="@+id/imageView1"
            style="@style/img_setting_icon"
            android:background="@drawable/icon_timesetting" />

        <TextView
            style="@style/text_setting"
            android:layout_toRightOf="@+id/imageView1"
            android:text="软件设置"
            android:textSize="16sp" />
    </RelativeLayout>
 -->
    <View
        android:layout_width="fill_parent"
        android:layout_height="20dp" />

    <RelativeLayout
        android:id="@+id/me_pingfen"
        style="@style/img_setting_bg" >

        <ImageView
            android:id="@+id/imageView1"
            style="@style/img_setting_icon"
            android:background="@drawable/icon_pingfen" />

        <TextView
            style="@style/text_setting"
            android:layout_toRightOf="@+id/imageView1"
            android:text="五星好评"
            android:textSize="16sp" />
    </RelativeLayout>
    
        <View
        android:id="@+id/me_juanzeng_view"
        android:layout_width="fill_parent"
        android:layout_height="20dp" />

    <RelativeLayout
        android:id="@+id/me_juanzeng"
        style="@style/img_setting_bg" >

        <ImageView
            android:id="@+id/imageView1"
            style="@style/img_setting_icon"
            android:background="@drawable/icon_juanzeng" />

        <TextView
            style="@style/text_setting"
            android:layout_toRightOf="@+id/imageView1"
            android:text="赞助作者"
            android:textSize="16sp" />
    </RelativeLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="20dp" />

    <RelativeLayout
        android:id="@+id/me_yixiazai"
        style="@style/img_setting_bg" >

        <ImageView
            android:id="@+id/imageView1"
            style="@style/img_setting_icon"
            android:background="@drawable/icon_me_down" />

        <TextView
            style="@style/text_setting"
            android:layout_toRightOf="@+id/imageView1"
            android:text="视频缓存"
            android:textSize="16sp" />
    </RelativeLayout>
        <View
        android:layout_width="fill_parent"
        android:layout_height="20dp" />

    <RelativeLayout
        android:id="@+id/me_add_video"
        style="@style/img_setting_bg" >

        <ImageView
            android:id="@+id/imageView1"
            style="@style/img_setting_icon"
            android:background="@drawable/icon_me_add" />

        <TextView
            style="@style/text_setting"
            android:layout_toRightOf="@+id/imageView1"
            android:text="添加视频"
            android:textSize="16sp" />
    </RelativeLayout>
    </LinearLayout>
</ScrollView>
</LinearLayout>