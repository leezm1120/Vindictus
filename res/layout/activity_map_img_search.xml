<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/beijingse"
    tools:context=".MapImgSearchActivity"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:background="@color/shenlanse"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/map_img_ed"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:layout_height="fill_parent" >

        </EditText>

        <ImageView
            android:id="@+id/map_img_gosearch"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/icon_sousuo" />

    </LinearLayout>
    
    <LinearLayout android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        
        <ListView
            android:id="@+id/map_img_search_listview"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:layout_weight="1"
            android:divider="@color/white"
            android:dividerHeight="1px" >
        </ListView>
        
         <ImageView
                android:id="@+id/map_img_search_view"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="fill_parent"/>
    </LinearLayout>
    
    
    
</LinearLayout>
