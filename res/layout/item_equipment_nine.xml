<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="70dp"
	android:background="#2b2b2b"
	android:padding="10dp"
    android:orientation="vertical" >




            <RelativeLayout android:layout_width="fill_parent"
                android:layout_weight="1"
                android:layout_height="0dp">
                <TextView android:id="@+id/manual_equipment_nine_title"
                    android:layout_height="fill_parent"
                    android:layout_width="wrap_content"
                    android:text="橙色结实的传承石碎片"
                    style="@style/text_big_title"
                    android:gravity="center_vertical"/>

                <TextView
                    android:id="@+id/manual_equipment_nine_level"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/manual_equipment_nine_title"
                    android:layout_centerVertical="true"
                    android:text="Lv90"
                    style="@style/text_small_tips" />

            </RelativeLayout>
            <View android:layout_width="fill_parent"
                android:layout_height="10dp"/>

             <LinearLayout android:layout_weight="1"
                 android:layout_width="fill_parent"
                 android:layout_height="0dp" 
                 android:orientation="horizontal">
                <TextView android:id="@+id/manual_equipment_nine_remarks"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="攻击 8000-10000"
                    android:gravity="center_vertical"
                    style="@style/text_second_title"
                    android:textSize="11sp"/>

        </LinearLayout>


</LinearLayout>