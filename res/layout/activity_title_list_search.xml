<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@color/beijingse"
    
    android:focusable="true"  
	android:focusableInTouchMode="true"
    tools:context=".TitleListSearchActivity" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:background="@color/qianlanse" >

        <Spinner
            android:id="@+id/found_title_search_spinner"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:dropDownWidth="100dp"
            android:entries="@array/role_list"
            android:spinnerMode="dropdown" />

        <EditText
            android:id="@+id/found_title_search_edittext"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4" />

        <ImageView
            android:id="@+id/found_title_search_gosearch"
            android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center_vertical"
        android:src="@drawable/icon_sousuo" />
    </LinearLayout>

    <ListView
        android:id="@+id/found_title_search_listview"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:divider="@color/white"
        android:dividerHeight="1px" >
    </ListView>
    <FrameLayout
        android:id="@+id/title_list_search_activity_adview"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >
    </FrameLayout>

</LinearLayout>