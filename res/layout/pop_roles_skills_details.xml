<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg_pop_up_window"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="60dp" >

        <ImageView
            android:id="@+id/pop_roles_skills_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_margin="10dp" />

        <TextView
            android:id="@+id/pop_roles_skills_title"
            style="@style/text_big_title"
            android:text="asdasd"
            android:textColor="@color/juhuangse"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/pop_roles_skills_icon" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/pop_roles_skills_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="技能ABC"
                android:textColor="@color/white" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:layout_margin="15dp"
                android:background="@color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="可以觉醒的效果\n只能觉醒如下一种效果"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/pop_roles_skills_awaken"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="可以觉醒的效果\n只能觉醒如下一种效果"
                android:textColor="@color/white" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>