<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="70dp"
    android:background="@color/beijingse" >

    <RelativeLayout android:layout_width="fill_parent"
        android:layout_height="70dp">
    <ImageView
        android:id="@+id/roles_skills_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_margin="15dp"/>

    <TextView
        android:id="@+id/roles_skills_title"
        style="@style/text_big_title"
        android:textColor="@color/juhuangse"
        android:textSize="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/roles_skills_icon" />
</RelativeLayout>
</RelativeLayout>
