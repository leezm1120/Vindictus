<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true"
   android:background="@drawable/bg_pop_up_window" >

    <EditText
        android:id="@+id/pop_enchant_ed"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        android:background="@color/beijingse"
        android:hint="请输入自定义价格/备注"
        android:textColorHint="@color/huise"
        android:textColor="@color/white"
        android:textSize="14sp" >

    </EditText>

  <LinearLayout
      android:layout_gravity="center"
      android:gravity="center"
      android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         >

        <TextView
            android:id="@+id/pop_enchant_cancle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/qianlanse"
            android:textSize="15sp"
            android:padding="10dp"
            android:layout_margin="5dp"
            android:text="取消" />

        <TextView
            android:id="@+id/pop_enchant_save"
             android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/qianlanse"
            android:textSize="15sp"
            android:padding="10dp"
            android:layout_margin="5dp"
            android:text="保存" />
    </LinearLayout>

    

</LinearLayout>
